/*
    The first 8 colors are the standard CGA colors.  The values for these
    are taken from ncurses lib_color.c and converted to RGB values
    with 8 bytes per component.  The additional 8 colors for AIX colors
    are approximations.  The names and values of these colors are
    based on tool at the URL below (although there are a few excpetions).
    In those cases, a search for something like "shades of green" on
    Wikipedia will locate the releveant the color.

    http://www.procato.com/rgbfind/


*/

C16_COLORS(COLOR_BLACK,     0x000000)
C16_COLORS(COLOR_RED,       0xAD0000)
C16_COLORS(COLOR_GREEN,     0x00AD00)
C16_COLORS(COLOR_BLUE,      0x0000AD)
C16_COLORS(COLOR_YELLOW,    0xADAD00)
C16_COLORS(COLOR_MAGENTA,   0xAD00AD)
C16_COLORS(COLOR_CYAN,      0x00ADAD)
C16_COLORS(COLOR_WHITE,     0xADADAD)

C16_COLORS(COLOR_SLATE,     0x363636)  
C16_COLORS(COLOR_PINK,      0xFFC0CB)  
C16_COLORS(COLOR_MALACHITE, 0x0B2A51) 
C16_COLORS(COLOR_CREAM,     0xFFFDD0) 
C16_COLORS(COLOR_AZURE,     0x007FFF) 
C16_COLORS(COLOR_MAUVE,     0xE0B0FF) 
C16_COLORS(COLOR_CELESTE,   0xB2FFFF)
C16_COLORS(COLOR_SILVER,    0x969696)
